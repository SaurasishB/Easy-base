package ${entity.packageName}.web.dto;

<#list entity.requiredImports as import>
import ${import};
</#list>
<#-- Import enums -->
<#list entity.fields as field>
<#if field.isEnum()>
import ${entity.packageName}.model.enums.${field.enumClass};
</#if>
</#list>
<#-- Import relationship target DTOs -->
<#list entity.fields as field>
<#if field.isRelationship() && field.targetPackage??>
import ${field.targetPackage?substring(0, field.targetPackage?last_index_of("."))}.web.dto.${field.target}DTO;
</#if>
</#list>
<#-- Import List for collections -->
<#assign needsList = false>
<#list entity.fields as field>
<#if field.isRelationship() && (field.relationType == 'OneToMany' || field.relationType == 'ManyToMany')>
<#assign needsList = true>
<#break>
</#if>
</#list>
<#if needsList>
import java.util.List;
</#if>

/**
* Base DTO for ${entity.entity} data.
* Generated by EasyBase Code Generator.
*/
