<#list entity.fields as field>
<#if !field.isRelationship()>
private ${field.javaType} ${field.name};
</#if>
</#list>

<#-- Relationship fields -->
<#list entity.fields as field>
<#if field.isRelationship()>
<#if field.relationType == 'ManyToOne' || field.relationType == 'OneToOne'>
private ${field.target}DTO ${field.name};
<#else>
private List<${field.target}DTO> ${field.name};
</#if>
</#if>
</#list>

<#-- Getters and Setters -->
<#list entity.fields as field>
<#if !field.isRelationship()>
public ${field.javaType} get${field.name?cap_first}() {
    return ${field.name};
}

public void set${field.name?cap_first}(${field.javaType} ${field.name}) {
    this.${field.name} = ${field.name};
}
</#if>
</#list>

<#-- Relationship getters and setters -->
<#list entity.fields as field>
<#if field.isRelationship()>
<#if field.relationType == 'ManyToOne' || field.relationType == 'OneToOne'>
public ${field.target}DTO get${field.name?cap_first}() {
    return ${field.name};
}
public void set${field.name?cap_first}(${field.target}DTO ${field.name}) {
    this.${field.name} = ${field.name};
}
<#else>
public List<${field.target}DTO> get${field.name?cap_first}() {
    return ${field.name};
}
public void set${field.name?cap_first}(List<${field.target}DTO> ${field.name}) {
    this.${field.name} = ${field.name};
}
</#if>
</#if>
</#list>
}